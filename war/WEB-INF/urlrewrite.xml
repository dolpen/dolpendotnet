<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.2//EN"
        "http://tuckey.org/res/dtds/urlrewrite3.2.dtd">

<!--

    Configuration file for UrlRewriteFilter
    http://tuckey.org/urlrewrite/

-->
<urlrewrite>
    <!-- TEXT Section -->
    <rule>
        <from>^/text$</from>
        <to type="redirect">/text/</to>
    </rule>
    <rule>
        <from>^/text/([0-9]+)/?$</from>
        <to>/text/?page=$1</to>
    </rule>
    <rule>
        <from>^/text/e/([0-9]+)/?$</from>
        <to>/text/detail?id=$1</to>
    </rule>
    <rule>
        <from>^/text/edit/([0-9]+)/?$</from>
        <to>/text/edit?id=$1</to>
    </rule>
    <!-- MML Section -->
    <rule>
        <from>^/mml$</from>
        <to type="redirect">/mml/</to>
    </rule>
    <rule>
        <from>^/mml/([0-9]+)/?$</from>
        <to>/mml/?page=$1</to>
    </rule>
    <rule>
        <from>^/mml/e/([0-9]+)/?$</from>
        <to>/mml/detail?id=$1</to>
    </rule>
    <rule>
        <from>^/mml/edit/([0-9]+)/?$</from>
        <to>/mml/edit?id=$1</to>
    </rule>
    <!-- Gyazo Section -->
    <rule>
        <from>^/gyazo$</from>
        <to type="redirect">/gyazo/</to>
    </rule>
    <rule>
        <from>^/gyazo/([0-9]+)/?$</from>
        <to>/gyazo/download?id=$1</to>
    </rule>

</urlrewrite>